{
    "compilerOptions": {
        "target": "esnext",
        "module": "esnext",
        "moduleResolution": "Bundler",
        "paths": {
            "@constants": ["./src/constants.ts"],
            "@db/*": ["./src/db/*"],
            "@commands/*": ["./src/bot/commands/*"],
            "@events/*": ["./src/bot/events/*"],
            "@utils/*": ["./src/utils/*"]
        },
        "strict": true,
        "skipLibCheck": true
    },
    "include": ["src/**/*.ts", "src/**/*.d.ts"]
}
